# Copy this file to config.yaml, customize, and run prov.py script
#
hosts:
  # Hosts are defined by hostname, and must have the following
  # attributes:
  # - region: DigitalOcean region with block storage feature
  #   (currently nyc1, sfo2, fra1)
  # - size:  Min. size 1gb
  # - image:  One of `coreos-stable`, `coreos-beta`, `coreos-alpha`
  # - volume_size:  In GB
  # - swap_size: In GB; data partition will be (volume_size -
  #   swap_size) GB
  # - ipa_role:  Exactly one host must ba `server`, and others `replica`
  #
  # This system has been tested with three hosts.
  ipa0.example.com:
    region: nyc1
    size: 1gb
    image: coreos-stable
    volume_size: 10
    swap_size: 2
    ipa_role: server
    host_id: 00
    network:
      name: cnet
      subnet: 172.16.0.0/24
      gateway: 172.16.0.1
  ipa1.example.com:
    region: nyc1
    size: 1gb
    image: coreos-stable
    volume_size: 10
    swap_size: 2
    ipa_role: replica
    host_id: 1
    network:
      name: cnet
      subnet: 172.16.1.0/24
      gateway: 172.16.1.1
  ipa2.example.com:
    region: nyc1
    size: 1gb
    image: coreos-stable
    volume_size: 10
    swap_size: 2
    ipa_role: replica
    host_id: 2
    network:
      name: cnet
      subnet: 172.16.2.0/24
      gateway: 172.16.2.1
